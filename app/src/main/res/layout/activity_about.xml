<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexander.geoflyinspira.MainActivity">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_weight="0.03"
        app:srcCompat="@drawable/geo_fly_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView android:id="@+id/textAreaScroller"
        android:layout_width="fill_parent"
        android:layout_height="173px"
        android:layout_x="0px"
        android:layout_y="25px"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_above="@+id/editText2"
        android:transitionGroup="true"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="8dp"
            android:gravity=""
            android:scrollbars="vertical"
            android:text="@string/s_scrollbar_text"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp"
            android:layout_alignParentEnd="true" />
    </ScrollView>
    <TextView
        android:id="@+id/editTextPagina"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="www.geoflyinspira.co"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/ImageViewFacebook"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:inputType="textPersonName"
        android:text="Siguenos en:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_above="@+id/editTextPagina"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ImageViewFacebook"
        android:layout_width="61dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/facebook"
        android:layout_alignTop="@+id/imageViewTwitter"
        android:layout_toStartOf="@+id/imageViewTwitter"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:id="@+id/imageViewTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/twitter"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageViewFacebook"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/imageViewTwitter"
        app:srcCompat="@drawable/instagram" />


</RelativeLayout>